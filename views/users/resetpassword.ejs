<%layout('./layouts/boilerplate')%>

<body style="overflow-x: hidden;">
    <div class="row" style="margin-top: 100px !important;">
        <h2 class="col-6 offset-1 mb-4">Password Reset :</h2>
        <div class="col-6 offset-3">
            <form action="/resetpassword" method="POST"  class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="newpassword" class="form-label">Enter new Password:</label>
                    <div class="input-group">
                        <input type="password" name="newpassword" placeholder="Enter the password" class="form-control" id="newpassword" required>
                        <button type="button" class="btn btn-outline-secondary" id="toggleNewPassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid Password
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confirmpassword" class="form-label">Confirm Password:</label>
                    <div class="input-group">
                        <input type="password" name="confirmpassword" placeholder="Enter password" class="form-control" id="confirmpassword" required>
                        <button type="button" class="btn btn-outline-secondary" id="toggleConfirmPassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <div class="invalid-feedback">
                        Enter a valid password
                    </div>
                </div>
                <input type="text" value="<%=emailfront%>" name=emailfront hidden>
                <button class="btn btn-success">Update</button>
            </form>
        </div>
    </div>
    <div style="height: 200px;width: 0px;">  </div>

    <!-- Bootstrap JS and Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.css" rel="stylesheet">

    <script>
        document.getElementById('toggleNewPassword').addEventListener('click', function() {
            const newPasswordField = document.getElementById('newpassword');
            togglePasswordVisibility(newPasswordField);
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const confirmPasswordField = document.getElementById('confirmpassword');
            togglePasswordVisibility(confirmPasswordField);
        });

        function togglePasswordVisibility(inputField) {
            const buttonIcon = inputField.parentElement.querySelector('.bi');

            if (inputField.type === 'password') {
                inputField.type = 'text';
                buttonIcon.classList.remove('bi-eye');
                buttonIcon.classList.add('bi-eye-slash');
            } else {
                inputField.type = 'password';
                buttonIcon.classList.remove('bi-eye-slash');
                buttonIcon.classList.add('bi-eye');
            }
        }
    </script>
</body>
