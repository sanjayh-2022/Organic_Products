<%layout('./layouts/boilerplate')%>

<body style="overflow-x: hidden;">
    <div class="row" style="margin-top: 100px !important;">
        <h2 class="col-6 offset-2 mb-4">Login :</h2>
        <div class="col-6 offset-3">
            <form action="/login" method="POST"  class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="enter the username" class="form-control" id="username" required>
                <div class="invalid-feedback">
                    Enter valid username
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="enter password" class="form-control" id="password" required>
                <div class="invalid-feedback">
                    Enter valid password
                </div>
            </div>
            <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>
    <div style="height: 200px;width: 0px;">  </div>
</body>